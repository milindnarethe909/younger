<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.account.order.OrderListActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/linelight1"
                android:padding="@dimen/_6sdp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="@dimen/_40sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardMaxElevation="@dimen/_2sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_39sdp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/avatar3" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_2sdp"
                app:cardMaxElevation="@dimen/_2sdp">

                <ScrollView
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="fill_parent"
                        android:paddingRight="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_centerVertical="true"
                                app:tint="@color/colorPrimary"
                                android:layout_marginTop="@dimen/_2sdp"
                                app:srcCompat="@drawable/user_outline_white" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/colorPrimary99">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edtName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:hint="@string/Fullname"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:textCursorDrawable="@drawable/cursor_primary"
                                    android:longClickable="false"
                                    android:paddingLeft="@dimen/_32sdp"
                                    android:paddingBottom="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/colorPrimary99"
                                    android:textSize="@dimen/_12sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_2sdp"
                                app:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/user_mail_outline_white" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/colorPrimary99">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edtEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:hint="Email"
                                    android:enabled="false"
                                    android:clickable="false"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:longClickable="false"
                                    android:paddingLeft="@dimen/_32sdp"
                                    android:paddingBottom="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/colorPrimary99"
                                    android:textSize="@dimen/_12sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_2sdp"
                                app:tint="@color/colorPrimary"
                                app:srcCompat="@drawable/user_mobile_white" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/colorPrimary99">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edtMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:hint="@string/MobileNumber"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:longClickable="false"
                                    android:paddingLeft="@dimen/_32sdp"
                                    android:paddingBottom="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/colorPrimary99"
                                    android:textSize="@dimen/_12sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cbChangePassword"
                            android:text="@string/ChangePassword"
                            android:buttonTint="@color/cartbudget"
                            android:textColor="@color/cartbudget"
                            android:textSize="@dimen/_9sdp"
                            fontPath="@string/semibold"
                            android:checked="true"
                            android:layout_marginTop="@dimen/_2sdp"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/linearChangePassword">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true"
                                    android:textColorHint="@color/colorPrimary99"
                                    app:passwordToggleTint="@color/colorPrimary">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edtOldPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:hint="@string/OldPassword"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPassword"
                                        android:longClickable="false"
                                        android:paddingLeft="@dimen/_32sdp"
                                        android:paddingBottom="@dimen/_12sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/colorPrimary"
                                        android:textColorHint="@color/colorPrimary99"
                                        android:textSize="@dimen/_12sdp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/colorPrimary"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/user_password_outline_white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true"
                                    android:textColorHint="@color/colorPrimary99"
                                    app:passwordToggleTint="@color/colorPrimary">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edtNewPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:hint="@string/NewPassword"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPassword"
                                        android:longClickable="false"
                                        android:paddingLeft="@dimen/_32sdp"
                                        android:paddingBottom="@dimen/_12sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/colorPrimary"
                                        android:textColorHint="@color/colorPrimary99"
                                        android:textSize="@dimen/_12sdp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerVertical="true"
                                    app:tint="@color/colorPrimary"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:srcCompat="@drawable/user_password_outline_white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true"
                                    android:textColorHint="@color/colorPrimary99"
                                    app:passwordToggleTint="@color/colorPrimary">

                                    <androidx.appcompat.widget.AppCompatEditText
                                        android:id="@+id/edtCPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:hint="@string/ConfirmPassword"
                                        android:imeOptions="actionDone"
                                        android:inputType="textPassword"
                                        android:longClickable="false"
                                        android:paddingLeft="@dimen/_32sdp"
                                        android:paddingBottom="@dimen/_12sdp"
                                        android:singleLine="true"
                                        android:textColor="@color/colorPrimary"
                                        android:textColorHint="@color/colorPrimary99"
                                        android:textSize="@dimen/_12sdp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    app:tint="@color/colorPrimary"
                                    app:srcCompat="@drawable/user_password_outline_white" />
                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSubmit"
                            fontPath="@string/bold"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:background="@drawable/btn_color_accent"
                            android:shadowColor="@color/colorPrimary"
                            android:shadowRadius="@android:integer/config_shortAnimTime"
                            android:text="@string/Submit"
                            android:layerType="software"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_10sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtDeactive"
                            fontPath="@string/semibold"
                            android:layout_gravity="right"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_deactive_account"
                            android:textColor="@color/cartbudget"
                            android:textSize="@dimen/_9sdp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </ScrollView>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>