<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:id="@+id/linearList"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardMaxElevation="@dimen/_1sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_6sdp"
                    android:paddingTop="@dimen/_6sdp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgOrderStatus"
                        app:srcCompat="@drawable/order_placed"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_6sdp">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtOrderId"
                                fontPath="@string/semibold"
                                android:layout_toLeftOf="@+id/txtOrderDate"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/dummy_orderid"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtOrderDate"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/dummy_user_review_date"
                                android:textColor="@color/textdark"
                                android:textSize="@dimen/_9sdp" />
                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_macbook1"
                            android:textColor="@color/text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtOrderPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dummy_price"
                                fontPath="@string/semibold"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtOrderType"
                                android:layout_centerVertical="true"
                                fontPath="@string/medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_Order_cod"
                                android:layout_toRightOf="@+id/txtOrderPrice"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@color/purple"
                                android:textSize="@dimen/_9sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtOrderStatus"
                                fontPath="@string/semibold"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/txtOrderType"
                                android:layout_width="fill_parent"
                                android:gravity="right"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearDeliveryTime"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                fontPath="@string/medium"
                                android:text="@string/txt_Order_DelivereTime"
                                android:textColor="@color/textlight"
                                android:textSize="@dimen/_8sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtDeliveryTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                fontPath="@string/medium"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text="3 days from today"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_8sdp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_3sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCancelOrder"
                        fontPath="@string/semibold"
                        android:gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_orders"
                        android:text="@string/txtCancelOrder"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_8sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtRepeatOrder"
                        fontPath="@string/semibold"
                        android:gravity="center"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:background="@drawable/btn_orders"
                        android:text="@string/txtRepeatOrder"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_8sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTrackOrder"
                        fontPath="@string/semibold"
                        android:layout_margin="@dimen/_3sdp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/btn_orders"
                        android:text="@string/txtTrackOrder"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_8sdp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>