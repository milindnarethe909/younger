                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/dummy_oneplus1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

