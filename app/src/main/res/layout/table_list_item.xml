                        fontPath="@string/it"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:gravity="right"
                        android:text="1000"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_9sdp" />

