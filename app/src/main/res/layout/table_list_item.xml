<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSrNo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Sr.No"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Item NameLot of so somany names that appear to be there is no there is no way   "
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Price"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtqty"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Qty"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtsize"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Size"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/ll_color"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtcolorhead"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@drawable/table_content_cell_bg"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtcolor"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@drawable/table_content_cell_bg"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtShipping"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Shipping"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtgst"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="GST"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txts_totalP"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="Total Price"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
</layout>