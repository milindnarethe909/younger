<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.product.ProductDetailActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <com.youngershopping.view.ratio.RatioRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:fixed_attribute="WIDTH"
                    app:horizontal_ratio="4"
                    app:vertical_ratio="4">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_above="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:overScrollMode="never"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:scrollbars="none" />

                    <com.youngershopping.view.pager.PageIndicator
                        android:id="@+id/indicator"
                        android:padding="@dimen/_4sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        app:ipi_dotDiameter="@dimen/_10sdp"
                        app:ipi_dotGap="@dimen/_6sdp"
                        app:ipi_animationDuration="320"
                        app:ipi_pageIndicatorColor="@color/textdark70"
                        app:ipi_currentPageIndicatorColor="@color/colorPrimaryDark"
                        />

                </com.youngershopping.view.ratio.RatioRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="@drawable/top_shadow_gradient" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/linelight1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTitle"
                        fontPath="@string/semibold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_oneplus1"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/linearReturnable"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtPriceMain"
                                    fontPath="@string/semibold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="@string/dummy_oneplus1_price"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_14sdp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:text="@string/dummy_oneplus1_price_discount"
                                    android:id="@+id/txtPriceDiscount"
                                    fontPath="@string/it"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:gravity="bottom"
                                    android:textColor="@color/text"
                                    android:textSize="@dimen/_9sdp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="@dimen/_44sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/btn_view_rating"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtAvgRating"
                                    fontPath="@string/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/dummy_avg_rating"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    app:srcCompat="@drawable/star_fill_white" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/linearReturnable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:srcCompat="@mipmap/returnable" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtReturnable"
                                fontPath="@string/semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:singleLine="true"
                                android:text="@string/ReturnableNot"
                                android:textColor="@color/cartbudget"
                                android:textSize="@dimen/_8sdp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="@string/semibold"
                        android:paddingLeft="@dimen/_8sdp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp" />

                    <include
                        android:id="@+id/commanRecyclerviewOption"
                        layout="@layout/comman_recyclerview" />

<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0.1dp"-->
<!--                        android:background="@color/linedark" />-->

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="@string/semibold"
                        android:paddingLeft="@dimen/_8sdp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp" />

                    <include
                        android:id="@+id/colorRecyclerviewOption"
                        layout="@layout/comman_recyclerview" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/linedark" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_24sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            app:cardElevation="@dimen/_2sdp"
                            android:layout_alignParentLeft="true"
                            app:cardMaxElevation="@dimen/_2sdp"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardBackgroundColor="@color/colorPrimary">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:id="@+id/imgQuantityMinus"
                                    android:padding="@dimen/_6sdp"
                                    app:srcCompat="@drawable/quantity_minus"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtQuantity"
                                    fontPath="@string/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_marginTop="0.5dp"
                                    android:layout_marginBottom="0.5dp"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:maxLength="2"
                                    android:minWidth="@dimen/_28sdp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:id="@+id/imgQuantityPlus"
                                    android:padding="@dimen/_6sdp"
                                    app:srcCompat="@drawable/quantity_plus"/>


                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">


                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:padding="@dimen/_1sdp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:cardElevation="2dp"
                                    app:cardMaxElevation="2dp">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/imgAddToCart1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_1sdp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardCornerRadius="@dimen/_11sdp"
                                        app:cardElevation="0dp"
                                        app:cardMaxElevation="0dp">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/imgAddToCart"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:padding="@dimen/_5sdp"
                                            app:srcCompat="@drawable/cart_add_primary" />
                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:padding="@dimen/_1sdp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:cardElevation="2dp"
                                    app:cardMaxElevation="2dp">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/imgFavourite1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_1sdp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardCornerRadius="@dimen/_11sdp"
                                        app:cardElevation="0dp"
                                        app:cardMaxElevation="0dp">


                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/imgFavourite"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:padding="@dimen/_4sdp"
                                            app:srcCompat="@drawable/favorite_fill" />
                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:padding="@dimen/_1sdp"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/_12sdp"
                                    app:cardElevation="2dp"
                                    app:cardMaxElevation="2dp"
                                    android:visibility="gone">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/_1sdp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardCornerRadius="@dimen/_11sdp"
                                        app:cardElevation="0dp"
                                        app:cardMaxElevation="0dp">


                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/imgCompare"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:padding="@dimen/_4sdp"
                                            app:srcCompat="@drawable/ic_compare"
                                            android:visibility="gone"/>
                                    </androidx.cardview.widget.CardView>
                                </androidx.cardview.widget.CardView>


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </RelativeLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/linelight1"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="@string/semibold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Description"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_long_txt"
                        android:textColor="@color/text"
                        android:id="@+id/txtDescription"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="@string/semibold"
                        android:layout_width="fill_parent"
                        android:padding="@dimen/_8sdp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/Specification"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@color/linedark" />

                    <include
                        android:id="@+id/commanRecyclerviewSpecification"
                        layout="@layout/comman_recyclerview_without_margin" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/linelight1"
                    android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        fontPath="@string/semibold"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/CheckAvailability"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_toLeftOf="@+id/imgDeliveryTrack"
                            android:gravity="center_vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_14sdp"
                                    android:layout_height="@dimen/_14sdp"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_location_pin"/>

                                <androidx.appcompat.widget.AppCompatEditText

                                    android:layout_width="wrap_content"
                                    android:textSize="@dimen/_10sdp"
                                    android:inputType="number"
                                    android:paddingLeft="@dimen/_18sdp"
                                    android:maxLength="6"
                                    fontPath="@string/medium"
                                    android:textColor="@color/black"
                                    android:textCursorDrawable="@drawable/cursor_primary"
                                    android:backgroundTint="@color/colorPrimary"
                                    android:id="@+id/EdtPincode"
                                    android:paddingRight="@dimen/_2sdp"
                                    android:hint="@string/EnterDeliveryPincode"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnCheck"
                                fontPath="@string/bold"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:background="@drawable/btn_color_accent"
                                android:shadowColor="@color/colorPrimary"
                                android:shadowRadius="@android:integer/config_shortAnimTime"
                                android:text="@string/Check"
                                android:textAllCaps="false"
                                android:layerType="software"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_8sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:id="@+id/imgDeliveryTrack"
                            app:srcCompat="@mipmap/check_delivery_track"/>

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvpiccode"
                        fontPath="@string/medium"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/UsuallyDelivered"
                        android:textColor="@color/text"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Enter_pincode_for_exact_delivery"
                        android:textColor="@color/textlight"
                        android:textSize="@dimen/_9sdp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llReView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            fontPath="@string/semibold"
                            android:paddingLeft="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_centerVertical="true"
                            android:text="@string/CustomerReview"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSeeAllReview"
                            fontPath="@string/bold"
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:background="@drawable/btn_color_accent"
                            android:layerType="software"
                            android:shadowColor="@color/colorPrimary"
                            android:shadowRadius="@android:integer/config_shortAnimTime"
                            android:text="@string/SeeMore"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp" />
                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="@dimen/_44sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:background="@drawable/btn_view_rating"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txtAvgRating1"
                                    fontPath="@string/medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="@string/dummy_avg_rating"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    app:srcCompat="@drawable/star_fill_white" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReview"
                            fontPath="@string/medium"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:paddingLeft="@dimen/_6sdp"
                            android:text="@string/CustomerReviewRating"
                            android:textColor="@color/text"
                            android:textSize="@dimen/_10sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/linedark" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_8sdp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_48sdp"
                            android:layout_height="@dimen/_48sdp"
                            app:cardCornerRadius="@dimen/_24sdp"
                            app:cardElevation="@dimen/_2sdp"
                            app:cardMaxElevation="@dimen/_2sdp"
                            android:layout_margin="@dimen/_1sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:scaleType="centerCrop"
                                android:id="@+id/imgReview"
                                app:srcCompat="@mipmap/placeholder_user"/>

                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                fontPath="@string/medium"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:id="@+id/txtReviewUsername"
                                android:text="@string/dummy_user1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgStar1"
                                    android:layout_width="@dimen/_12sdp"
                                    android:layout_height="@dimen/_12sdp"
                                    app:srcCompat="@drawable/star_fill" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/imgStar2"
                                    android:layout_width="@dimen/_12sdp"
